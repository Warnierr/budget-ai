// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// UTILISATEURS
model User {
  id            String    @id @default(cuid())
  email         String    @unique
  emailVerified DateTime?
  name          String?
  password      String? // Hash bcrypt (null si OAuth)
  image         String?

  // Préférences
  currency String @default("EUR")
  language String @default("fr")
  
  // Préférences Dashboard (JSON stocké en string)
  dashboardWidgets String @default("{\"balance\":true,\"forecast\":true,\"flows\":true,\"chart\":true,\"pie\":true,\"goals\":true,\"subscriptions\":true,\"activity\":true,\"advice\":true}")

  // Relations
  accounts      Account[]
  sessions      Session[]
  bankAccounts  BankAccount[]
  incomes       Income[]
  expenses      Expense[]
  subscriptions Subscription[]
  categories    Category[]
  budgets       Budget[]
  goals         Goal[]
  
  // V2 - Import CSV
  importedTransactions ImportedTransaction[]
  importRules          ImportRule[]
  importBatches        ImportBatch[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

// AUTH (NextAuth)
model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

// COMPTES BANCAIRES
model BankAccount {
  id          String   @id @default(cuid())
  userId      String
  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  name        String   // "Compte principal", "Revolut", "N26", etc.
  type        String   @default("checking") // "checking", "savings", "investment", "crypto"
  bank        String?  // "Société Générale", "Revolut", "N26", "Boursorama", etc.
  
  // Solde initial (pour calculer le solde actuel)
  initialBalance Float @default(0)
  
  // Personnalisation
  color       String?  // Couleur pour l'affichage
  icon        String?  // Icône (emoji ou nom lucide)
  
  // Statut
  isActive    Boolean  @default(true)
  isDefault   Boolean  @default(false) // Compte par défaut pour les nouvelles transactions
  
  // Relations
  incomes     Income[]
  expenses    Expense[]
  subscriptions Subscription[]
  
  // V2 - Import CSV
  importedTransactions ImportedTransaction[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([userId])
}

// REVENUS
model Income {
  id          String   @id @default(cuid())
  userId      String
  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  // Compte bancaire associé (optionnel pour rétrocompatibilité)
  bankAccountId String?
  bankAccount   BankAccount? @relation(fields: [bankAccountId], references: [id])

  name        String // "Salaire", "Freelance", etc.
  amount      Float
  frequency   String // "monthly", "once", "weekly", "yearly"
  date        DateTime // Date de réception

  description String?
  isRecurring Boolean  @default(false)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([userId])
  @@index([bankAccountId])
  @@index([date])
}

// DÉPENSES
model Expense {
  id         String    @id @default(cuid())
  userId     String
  user       User      @relation(fields: [userId], references: [id], onDelete: Cascade)

  categoryId String?
  category   Category? @relation(fields: [categoryId], references: [id])

  // Compte bancaire associé (optionnel pour rétrocompatibilité)
  bankAccountId String?
  bankAccount   BankAccount? @relation(fields: [bankAccountId], references: [id])

  name        String
  amount      Float
  date        DateTime

  status      String  @default("pending") // "pending", "paid"
  description String?

  // Import bancaire
  isImported    Boolean @default(false)
  transactionId String?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([userId])
  @@index([categoryId])
  @@index([bankAccountId])
  @@index([date])
}

// ABONNEMENTS
model Subscription {
  id          String    @id @default(cuid())
  userId      String
  user        User      @relation(fields: [userId], references: [id], onDelete: Cascade)

  categoryId String?
  category   Category? @relation(fields: [categoryId], references: [id])

  // Compte bancaire associé (optionnel pour rétrocompatibilité)
  bankAccountId String?
  bankAccount   BankAccount? @relation(fields: [bankAccountId], references: [id])

  name        String // "YouTube Premium", "Revolut", etc.
  amount      Float
  frequency   String   @default("monthly") // "monthly", "yearly"
  billingDate Int // Jour du mois (1-31)

  isActive    Boolean @default(true)
  description String?
  url         String? // Lien pour gérer l'abo

  // Notifications
  reminderDays Int @default(3) // Rappel X jours avant

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([userId])
  @@index([bankAccountId])
}

// CATÉGORIES
model Category {
  id     String  @id @default(cuid())
  userId String? // Null = catégorie par défaut
  user   User?   @relation(fields: [userId], references: [id], onDelete: Cascade)

  name  String
  icon  String? // Nom d'icône Lucide
  color String? // Code couleur hex

  isDefault Boolean @default(false)

  expenses      Expense[]
  subscriptions Subscription[]
  budgets       Budget[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([userId])
}

// BUDGETS (par catégorie et par mois)
model Budget {
  id         String   @id @default(cuid())
  userId     String
  user       User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  categoryId String
  category   Category @relation(fields: [categoryId], references: [id], onDelete: Cascade)

  amount Float
  month  DateTime // Premier jour du mois

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@unique([userId, categoryId, month])
  @@index([userId])
}

// OBJECTIFS FINANCIERS
model Goal {
  id            String   @id @default(cuid())
  userId        String
  user          User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  name          String // "Vacances en Italie", "Fonds d'urgence"
  targetAmount  Float
  currentAmount Float @default(0)
  deadline      DateTime?

  description String?
  isCompleted Boolean  @default(false)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([userId])
}

// ============================================
// V2 - IMPORT CSV
// ============================================

// TRANSACTIONS IMPORTEES (staging avant validation)
model ImportedTransaction {
  id            String   @id @default(cuid())
  userId        String
  user          User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  bankAccountId String
  bankAccount   BankAccount @relation(fields: [bankAccountId], references: [id], onDelete: Cascade)
  
  // Donnees brutes de l'import
  rawLabel      String      // Libelle original ("CARTE 12/01 CARREFOUR MARKET")
  rawAmount     Float       // Montant original (negatif = depense, positif = revenu)
  rawDate       DateTime    // Date de l'operation
  
  // Donnees enrichies par l'IA
  category      String?     // Categorie detectee ("Alimentation", "Transport", etc.)
  isRecurring   Boolean     @default(false)
  recurringType String?     // "subscription" | "income" | null
  
  // Metadata import
  importBatch   String      // ID unique du batch d'import (pour grouper)
  bankSource    String?     // "revolut" | "sg" | "bnp" | "boursorama" | "generic"
  
  // Statut
  status        String      @default("pending") // "pending" | "validated" | "rejected" | "converted"
  
  // Lien vers la transaction finale (apres conversion)
  convertedExpenseId String?
  convertedIncomeId  String?
  
  createdAt     DateTime    @default(now())
  updatedAt     DateTime    @updatedAt
  
  // Eviter les doublons : meme user, meme compte, meme date, meme montant, meme libelle
  @@unique([userId, bankAccountId, rawDate, rawAmount, rawLabel])
  @@index([userId])
  @@index([bankAccountId])
  @@index([importBatch])
  @@index([status])
}

// REGLES DE CATEGORISATION (apprentissage utilisateur)
model ImportRule {
  id          String   @id @default(cuid())
  userId      String
  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  // Pattern de matching (texte ou regex)
  pattern     String   // "SPOTIFY" ou "CARREFOUR.*"
  matchType   String   @default("contains") // "contains" | "startsWith" | "regex"
  
  // Action a appliquer
  category    String   // Categorie a assigner
  isRecurring Boolean  @default(false)
  recurringType String? // "subscription" | "income"
  
  // Stats
  usageCount  Int      @default(0)
  
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  
  @@unique([userId, pattern])
  @@index([userId])
}

// BATCHES D'IMPORT (historique des imports)
model ImportBatch {
  id            String   @id @default(cuid())
  userId        String
  user          User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  bankAccountId String
  bankSource    String?  // Format detecte
  fileName      String   // Nom du fichier original
  
  // Stats
  totalRows     Int      @default(0)
  importedRows  Int      @default(0)
  skippedRows   Int      @default(0) // Doublons ignores
  errorRows     Int      @default(0)
  
  status        String   @default("processing") // "processing" | "completed" | "failed"
  errorMessage  String?
  
  createdAt     DateTime @default(now())
  completedAt   DateTime?
  
  @@index([userId])
}

